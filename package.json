{
  "name": "alexa-countryquiz-skill",
  "version": "1.0.0",
  "description": "Alexa Country Quiz Skill",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "pretest": "npm run build:prod",
    "test": "cross-env AWS_REGION=us-east-1 jest --config lambda/jest.config.js",
    "test:watch": "npm run test -- --watch",
    "format": "prettier --write .",
    "build": "webpack --config lambda/webpack.config.ts",
    "build:dev": "npm run build -- --mode development --watch",
    "build:prod": "npm run build -- --mode production",
    "deploy:prod": "ask deploy --ignore-hash --profile default --target skill-infrastructure",
    "update-schema": "ts-node ./bin/update-schema.ts --lang de --file ./models/de-DE.json && npm run format",
    "convert-assets": "rsvg-convert -w 108 -o skill-package/assets/images/icon108.png skill-package/assets/images/icon.svg && rsvg-convert -w 512 -o skill-package/assets/images/icon512.png skill-package/assets/images/icon.svg",
    "create-s3-bucket": "aws s3 ls s3://alexa-countryquiz-skill > /dev/null 2>&1 || aws s3 mb s3://alexa-countryquiz-skill --region eu-west-1",
    "deploy:assets": "aws s3 sync ./skill-package/assets/images s3://alexa-countryquiz-skill/ --acl public-read"
  },
  "devDependencies": {
    "@corux/country-data": "2.0.3",
    "@types/jest": "26.0.19",
    "@types/node": "12.12.22",
    "ask-cli": "2.22.0",
    "ask-sdk": "2.10.0",
    "aws-sdk": "2.820.0",
    "class.extend": "0.9.2",
    "commander": "7.1.0",
    "cross-env": "7.0.3",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "raw-loader": "4.0.2",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.13",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "underscore": "1.12.0",
    "virtual-alexa": "0.7.5",
    "webpack": "5.11.1",
    "webpack-cli": "4.3.1"
  }
}
